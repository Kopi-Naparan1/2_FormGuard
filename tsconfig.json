{
  "compilerOptions": {
    // File Layout
    "rootDir": "ts/",
    "outDir": "js/",

    // Environment
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],

    // Outputs
    "sourceMap": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Module/Interop
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["ts/"],
  "exclude": ["node_modules"]
}
